{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "ESNext",
		"sourceMap": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "react-jsx",
		"outDir": "./dist"
	},
	"include": ["src/**/*", "webpack.config.js", "__mocks__/**/*"],
	"exclude": ["./dist/**/*"]
}
